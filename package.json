{
  "name": "blogfolio",
  "description": "Basic npm script static site builder",
  "version": "0.0.2",
  "author": "Marcos",
  "private": true,
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "html-minifier": "*",
    "stylelint": "*",
    "stylelint-order": "*"
  },
  "scripts": {
    "clean": "rm -r _site/*",
    "lint": "stylelint includes/styles/*.css",
    "htmlmin": "html-minifier --collapse-whitespace --remove-comments --input-dir _site --output-dir _site --file-ext html"
  }
}
